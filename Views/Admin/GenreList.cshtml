@model AdminGenresViewModel;

<h1>Admin Genre</h1>

<table class="table table-striped table-hover table-bordered">

    <thead>
        <tr>
            <th style="width: 30px;">#</th>
            <th>Name</th>
            <th style="width: 70px;">Count</th>
            <th style="width: 160px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model.Genres)
        {
            <tr>
                <td>
                    @genre.GenreId
                </td>
                <td>
                    @genre.Name
                </td>
                <td>
                    @genre.Count
                </td>
                <td>
                    <a href="/Admin/GenreUpdate/@genre.GenreId" class="btn btn-warning btn-sm">Update</a>
                    <form method="post" asp-controller="Admin" asp-action="GenreDelete" style="display: inline;">
                        <input type="hidden" name="GenreId" value="@genre.GenreId" />
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>









</table>

<div class="mt-3">

    <a href="/Admin/GenreCreate">Genre Ekle</a>
</div>