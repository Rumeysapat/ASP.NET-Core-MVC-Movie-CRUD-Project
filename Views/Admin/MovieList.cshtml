@model AdminMoviesViewModel
@using DynamicData.Entity


<h1> Admin Movie List </h1>


<table class="table table-striped table-hover table-bordered">


    <thead>
        <tr>

            <th style="width:30px">
                #
            </th>
            <th style="width:100px">
                Image
            </th>
            <th>
                Title
            </th>
            <th style="width:70px;">
                Genres
            </th>
            <th style="width:160px;"></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var movie in Model.Movies)
        {
            <tr>

                <td> @movie.MovieId</td>
                <td> <img src="~/img/@movie.ImageUrl" width="80" /></td>
                <td> @movie.Title</td>
                <td>
                    <ul>
                        @foreach (var genre in movie.Genres)
                        {
                            <li>@genre.Name</li>

                        }
                    </ul>
                </td>
                <td>
                    <a href="/Admin/MovieUpdate/@movie.MovieId" class="btn btn-primary btn-sm">Update</a>

                    <form method="post" asp-controller="Admin" asp-action="MovieDelete" style="display: inline;">
                        <input type="hidden" name="MovieId" value="@movie.MovieId" />
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>


                </td>





            </tr>

        }




        <tbody />






</table>