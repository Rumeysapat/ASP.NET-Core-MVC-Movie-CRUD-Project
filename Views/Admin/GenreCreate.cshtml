@model GenreCreateViewModel

<h1>Create Genre</h1>
<hr />

<form asp-controller="Admin" asp-action="GenreCreate" method="post">
    <div class="row">

        <!-- Sol taraf -->
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </div>

        <!-- SaÄŸ taraf -->
        <div class="col-md-6">
            <h5>Filmler</h5>

            @foreach (var movie in Model.Movies)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedMovieIds" value="@movie.MovieId"
                        id="movie_@movie.MovieId" />

                    <label class="form-check-label" for="movie_@movie.MovieId">
                        @movie.MovieTitle
                    </label>
                </div>
            }
        </div>

    </div>
</form>